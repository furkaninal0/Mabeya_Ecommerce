@inject MabeyaDbContext dbContext
@using System.Security.Claims

@{

    ViewData["Title"] = "Kullanıcı Profili";
    var userId = Guid.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier)!);
    var user = dbContext.Users.FirstOrDefault(p => p.Id == userId);

}

<!DOCTYPE html>
<html lang="tr">


<head>
    <title> @ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!--link href="~/css/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/sidebars/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />

</head>
<body>
    
    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="custom-menu">
                <button type="button" id="sidebarCollapse" class="btn btn-primary">
                    <i class="fa fa-bars"></i>
                    <span class="sr-only">Menu Ayarları</span>
                </button>
            </div>

            <div class="p-4 pt-5">
                <h1><a asp-controller="Profile" asp-action="Profile" class="logo">@user!.givenName</a></h1>
                <ul class="list-unstyled components mb-5">
                    <li class="active">
                        <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Siparişlerim</a>
                        <ul class="collapse list-unstyled" id="homeSubmenu">
                            <li>
                                <a asp-controller="Profile" asp-action="PastOrders">Tamamlanmış Siparişler</a>
                            </li>
                            <li>
                                <a asp-controller="Profile" asp-action="">İade Siparişler</a>
                            </li>
                        </ul>
                    </li>

                    <li>
                        <a href="#">Adreslerim</a>
                    </li>
                    <li>
                        <a href="#">Şifremi Değiştir</a>
                    </li>

                </ul>

                <div class="mb-5">
                    <h3 class="h6">Yeni ürünlerimizden haberdar olmak için E-posta adresinizi giriniz.</h3>
                    <form action="#" class="colorlib-subscribe-form">
                        <div class="form-group d-flex">
                            <div class="icon"><span class="icon-paper-plane"></span></div>
                            <input type="text" class="form-control" placeholder="">
                        </div>
                    </form>
                </div>

                <div class="footer">
                    <p>&copy; @DateTime.Now.Year Mabeya</p>
                </div>

            </div>
        </nav>
        <div id="content" class="p-4 p-md-5 pt-5">
            @RenderBody()
        </div>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/sidebars/js/popper.js"></script>
    <script src="~/sidebars/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>