@model ShoppedOrder
@using Humanizer
@inject MabeyaDbContext dbContext

<div class="order-card mb-4 shadow-sm rounded">

    <div class="order-header d-flex justify-content-between align-items-center p-3">

        <div class="d-flex align-items-center gap-3">
            <button class="btn btn-sm btn-light border" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#order_@Model.Id">
                <i class="bi bi-chevron-down"></i>
            </button>

            <div class="fw-semibold text-muted">
                @Model.Date.Humanize()
            </div>
        </div>

        <div class="fw-bold text-primary">
            @Model.GrandTotal.ToString("n2") ₺
        </div>

        <div class="ms-3">
            @await Html.PartialAsync("_OrderStatusBadgePartial", Model.Status)
        </div>
    </div>

    <div class="collapse" id="order_@Model.Id">
        <div class="p-3">

            <table class="table align-middle mb-0">
                <tbody>
                    @foreach (var item in Model.Order_Items)
                    {
                        <tr>
                            <td width="70">
                                <img src="@Url.Action("Product", "Images", new { id = item.productId })"
                                     class="img-fluid rounded border"
                                     style="height:60px; width:60px; object-fit:cover;" />
                            </td>

                            <td>
                                <a asp-route="Product"
                                   asp-route-id="@item.productId"
                                   asp-route-name="@item.Product.Name.ToSafeUrlString()"
                                   class="fw-semibold text-decoration-none text-dark">
                                    @item.Product.Name
                                </a>
                            </td>

                            <td width="70" class="text-center">@item.Quantity</td>
                            <td width="120">@item.Price.ToString("n2") ₺</td>
                            <td width="120" class="fw-bold">@item.Amount.ToString("n2") ₺</td>
                        </tr>
                    }
                </tbody>

                <tfoot>
                    <tr>
                        <td colspan="4" class="text-end fw-bold">Genel Toplam</td>
                        <td class="fw-bold">@Model.GrandTotal.ToString("n2") ₺</td>
                    </tr>
                </tfoot>
            </table>

            <hr />

            @if (!string.IsNullOrEmpty(Model.TrackingNumber))
            {
                <div class="alert alert-info">
                    <b>Kargo Takip No:</b> @Model.TrackingNumber
                </div>
            }

            @if (Model.IsReturnRequested)
            {
                <div class="alert alert-warning">
                    <b>İade talebiniz alındı.</b> Satıcı onayladığında bilgilendirileceksiniz.
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.ReturnTrackingNumber))
            {
                <div class="alert alert-info">
                    <b>Satıcı İade Kargo Kodu:</b> @Model.ReturnTrackingNumber
                </div>

                @if (Model.IsReturnApproved && Model.UserReturnTrackingNumber == null)
                {
                    <div class="alert alert-warning mt-2">
                        Ürünü aşağıdaki form ile bize gönderiniz.
                    </div>

                    <form asp-action="SendReturnCargo" asp-route-id="@Model.Id" method="post" class="mt-2">
                        <div class="input-group">
                            <input type="text" name="userReturnTracking" class="form-control"
                                   placeholder="Kargo takip numaranız" required />
                            <button class="btn btn-success">Gönder</button>
                        </div>
                    </form>
                }
            }

            @if (!string.IsNullOrEmpty(Model.UserReturnTrackingNumber))
            {
                <div class="alert alert-primary mt-3">
                    <b>Sizin Gönderdiğiniz Kargo Kodu:</b> @Model.UserReturnTrackingNumber
                </div>
            }

            @if (Model.FinalReturnApproved)
            {
                <div class="alert alert-success mt-3">
                    <b>İade işlemi tamamlandı.</b>
                </div>
            }

            @if (Model.Status == OrderStatus.New || Model.Status == OrderStatus.InProgress)
            {
                <form asp-action="CancelOrder" asp-route-id="@Model.Id" method="post">
                    <button class="btn btn-danger mt-3">Siparişi İptal Et</button>
                </form>
            }

            @if (Model.Status == OrderStatus.Delivered && !Model.IsReturnRequested)
            {
                <a asp-action="RequestReturn" asp-controller="Profile"
                   asp-route-id="@Model.Id"
                   class="btn btn-warning mt-3">
                    İade Talebi Oluştur
                </a>
            }

        </div>
    </div>

</div>
