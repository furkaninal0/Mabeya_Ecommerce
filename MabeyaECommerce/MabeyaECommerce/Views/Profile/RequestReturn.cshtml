@model IEnumerable<ShoppedOrder>

<h2>İade Talepleri</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Kullanıcı</th>
            <th>Tutar</th>
            <th>Kargo Takip No (İade)</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Date.ToShortDateString()</td>
                <td>@order.User.givenName (@order.User.Email)</td>
                <td>@order.GrandTotal.ToString("n2") ₺</td>
                <td>@order.ReturnTrackingNumber</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@order.Id" class="btn btn-primary">Detay</a>
                    <a asp-action="ApproveReturn" asp-route-id="@order.Id" class="btn btn-success">Onayla</a>
                </td>
            </tr>
        }
    </tbody>
</table>
