@model RegisterViewModel
@{
    ViewData["Title"] = "Yeni Üyelik";
    Layout = "_LayoutAccount";
}


<!DOCTYPE html>

<html lang="tr" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title></title>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>
<body class="bg-body-secondary>
  <div class="container vh-100 d-flex flex-column align-items-center justify-content-center">
            <div class=" card col-12 col-md-4 col-lg-3 shadow">
                <div class="text-center">
                    <i class="bi bi-person fs-1"></i>
                </div>
                <div class=" card-header text-center text-bg-light ">
                    <h4> Yeni Üye Kaydı </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" asp-validation-summary="ModelOnly"> </div>
                    <form method="post">
                        <div class="mb-3">
                            <div class=" col-12">
                                <label asp-for="UserName" class="form-label"> </label>
                                <input asp-for="UserName" class="form-control" " placeholder="email adresinizi giriniz." />
                                <span asp-validation-for="UserName" class="text-bg-info"> </span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class=" col-12">
                                <label asp-for="GivenName" class="form-label"> </label>
                                <input asp-for="GivenName" class="form-control" placeholder="adını ve soyadınızı giriniz." />
                                <span asp-validation-for="GivenName" class="text-bg-info"> </span>
                            </div>
                        </div> <div class="mb-3">
                            <div class=" col-12">
                                <label asp-for="Password" class="form-label"> </label>
                                <input asp-for="Password" class="form-control" placeholder="parolanızı giriniz." />
                                <span asp-validation-for="Password" class="text-bg-info"> </span>
                            </div>
                        </div> <div class="mb-3">
                            <div class=" col-12">
                                <label asp-for="PasswordCheck" class="form-label"> </label>
                                <input asp-for="PasswordCheck" class="form-control" placeholder="parolanızı tekrar giriniz." />
                                <span asp-validation-for="PasswordCheck" class="text-bg-info"> </span>
                            </div>
                        </div>

                        <div class=" mb-3 col-12">
                            <button type="submit" class="btn btn-dark w-100">
                                <i class="bi bi-box-arrow-in-right">
                                </i>
                                Kaydol
                            </button>
                        </div>
                        <div class=" d-flex justify-content-center gap-3">
                            <a href="#">Kayıt Ol</a>
                            <a href="#">Şifremi Unuttum</a>
                        </div>



                    </form>
                </div>

            </div>

        </div>
    

    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>