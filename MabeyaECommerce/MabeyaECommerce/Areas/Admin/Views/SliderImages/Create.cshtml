@model MabeyaECommerce.Areas.Admin.Models.SliderImagesDto
@inject MabeyaDbContext dbContext
@{
    ViewData["Title"] = "Slider Ekleme";
    var catalogs = new SelectList(dbContext.Catalogs.ToList(),"Id" , "Name");
}


<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <div class="custom-file">
            <label class="form-label" asp-for="ImageFile"> Dosya Seçiniz. </label>
            <input class="form-control" type="file" asp-for="ImageFile" />
        </div>
    </div>

    <div class="mb-3">
        <label class=" form-label " asp-for="Url"> </label>
        <input class=" form-control" asp-for="Url" placeholder="url giriniz." />
    </div>
    <div class="mb-3">
        <label class=" form-label " asp-for="catalogId"> </label>
        <select class="form-select text-dark" asp-for="catalogId" asp-items="catalogs">
            <option disabled selected value=""> Katalog Seçiniz. </option>
        </select>
    </div>
    <div class=" mb-3">
        <div class=" ">
            <input class="form-check-input" asp-for="IsEnabled" />
            <label class="form-check-label" asp-for="IsEnabled"> </label>
        </div>
    </div>
    <div class="d-flex ">
        <a class="btn btn-link" asp-action="Index"> İptal Et </a>
        <button type="submit" class="btn btn-google"> Kaydet </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 