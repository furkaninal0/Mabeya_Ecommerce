@model List<Category>
@{
    ViewData["Title"] = "Özellik Listesi";

}
<div class=" p-3 d-flex justify-content-end ">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus" aria-hidden="true"></i>
        Yeni Oluştur

    </a>
</div>
<div class="accordion" id="accordionExample">
    @foreach (var category in Model)
    {
        <div class="card">
            <div class="card-header" id="headingOne">
                <h2 class="mb-0">
                    <button class="btn btn-block" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@category.Id" aria-expanded="true" aria-controls="collapseOne">
                        @category.Name <span class=" badge badge-primary"> @category.Specs.Count() </span>

                    </button>
                </h2>
            </div>
            
            <div id="collapse_@category.Id" class="collapse" data-bs-parent="#accordionExample">
                <div class="card-body">
                    <table class="table table-bordered table-striped-columns">
                        <colgroup>
                            <col />
                            <col />
                            <col width="200" />
                        </colgroup>
                       
                        <thead>
                            <tr>
                                <th>
                                    <div class="d-flex align-items-center">
                                        Ad
                                    </div>
                                </th>
                                <th>
                                    <div class="d-flex align-items-center">
                                        Aktiflik
                                    </div>
                                </th>
                                <th>
                                    <div class="d-flex align-items-center">
                                        İşlemler
                                    </div>
                                </th>
                            </tr>

                        </thead>
                    <tbody>
                        @foreach (var item in category.Specs)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td class="text-center">
                                    @if (item.IsEnabled)
                                    {
                                        <i class="fa fa-check text-success" aria-hidden="true"></i>
                                    }
                                    else
                                    {
                                        <i class=" fa fa-times text-danger" aria-hidden="true"> </i>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex justify-content-center">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning me-2">
                                            <i class="fa fa-pencil" aria-hidden="true"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger remove-btn">
                                            <i class="fa fa-trash" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts{

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>

    $(() => {
        $('.remove-btn').on('click', (e) => {
            Swal.fire({
                icon: 'warning',
                title: 'uyarı',
                html: 'Bu kayıt tamamen silinecektir. Onaylıyor musunuz?',
                showCancelButton: true,
                cancelButtonText: 'İptal',
                confirmButtonText: 'Sil',
            })
                .then((result) => {
                    if (result.isConfirmed)
                        window.location = $(e.currentTarget).attr('href');

                });
            return false;
        });

    });
    </script>
}


