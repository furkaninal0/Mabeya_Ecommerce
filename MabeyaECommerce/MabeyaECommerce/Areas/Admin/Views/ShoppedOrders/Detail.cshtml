@model ShoppedOrder
@{
    ViewData["Title"] = "Sipariş Detayı";
}

<div class="card shadow-sm">
    <div class="card-body">

        <h4 class="mb-3">Sipariş Bilgileri</h4>

        <div class="row mb-1 ">
            <div class="col-md-4">
                <b>Tarih:</b> @Model.Date.ToString("dd.MM.yyyy HH:mm")
            </div>
            <div class="col-md-4">
                <b>Kullanıcı:</b> @Model.User!.givenName
            </div>
            <div class="col-md-4">
                <b>Email:</b> @Model.User!.Email
            </div>

        </div>
        <div class="col-md-4 mb-2 ">
            <b>Telefon:</b> @Model.User!.PhoneNumber
        </div>


        <div class="row mb-3">
            <div class="col-md-4">
                <b>Tutar:</b>
                <span class="text-success fw-bold">@Model.GrandTotal.ToString("n2") ₺</span>
            </div>

            <div class="col-md-4">
                <b>Sipariş Durumu:</b><br />

                @switch (Model.Status)
                {
                    case OrderStatus.New:
                        <span class="badge bg-primary">Yeni</span>
                        break;
                    case OrderStatus.InProgress:
                        <span class="badge bg-warning text-dark">Hazırlanıyor</span>
                        break;
                    case OrderStatus.Shipped:
                        <span class="badge bg-info text-dark">Kargoya Verildi</span>
                        break;
                    case OrderStatus.Delivered:
                        <span class="badge bg-success">Teslim Edildi</span>
                        break;
                    case OrderStatus.Cancelled:
                        <span class="badge bg-danger">İptal Edildi</span>
                        break;
                }
            </div>

            <div class="col-md-4">
                <b>Kargo Takip No:</b>
                <span class="text-success">@Model.TrackingNumber</span>
            </div>
        </div>

        <hr />

        <h4 class="mt-4 mb-2 text-danger">İade Bilgileri</h4>

        @if (Model.IsReturnRequested)
        {
            <div class="alert alert-warning">
                <b>Kullanıcı iade talebi oluşturdu.</b><br />

                @if (!Model.IsReturnApproved)
                {
                    <div class="mt-2">
                        <a asp-action="ApproveReturn" asp-route-id="@Model.Id" class="btn btn-success btn-sm">
                            Talebi Onayla
                        </a>

                        <a asp-action="RejectReturn" asp-route-id="@Model.Id" class="btn btn-danger btn-sm">
                            Talebi Reddet
                        </a>
                    </div>
                }
                else
                {
                    <div class="mt-2 text-success fw-bold">İade talebi onaylandı.</div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-secondary">
                Kullanıcı tarafından herhangi bir iade talebi yapılmamış.
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.ReturnTrackingNumber))
        {
            <div class="alert alert-info">
                <b>Mağaza Tarafından Verilen İade Kargo Kodu:</b> @Model.ReturnTrackingNumber
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.UserReturnTrackingNumber))
        {
            <div class="alert alert-primary">
                <b>Kullanıcının Gönderdiği İade Kargo Kodu:</b> @Model.UserReturnTrackingNumber
            </div>
        }

        @if (Model.IsReturnApproved && string.IsNullOrWhiteSpace(Model.ReturnTrackingNumber))
        {
            <form asp-action="SetReturnTracking" method="post" asp-route-id="@Model.Id" class="mt-3">
                <div class="input-group">
                    <input type="text" name="trackingNumber" class="form-control" placeholder="İade Kargo Kodu">
                    <button class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        }
        @if (Model.IsReturnApproved && Model.UserReturnTrackingNumber != null && !Model.FinalReturnApproved)
        {
            <form asp-action="CompleteReturn" asp-route-id="@Model.Id" method="post">
                <button class="btn btn-success mt-3">
                    ✔ İADE TAMAMLANDI (Ürün Bize Ulaştı)
                </button>
            </form>
        }
        @if (Model.FinalReturnApproved)
        {
            <div class="alert alert-success mt-3">
                ✔ İade süreci tamamlandı. Kullanıcıya ücret iadesi yapılmıştır.
                <br />
                <span class="text-muted">@Model.ReturnCompletedDate?.ToString("dd.MM.yyyy HH:mm")</span>
            </div>
        }

        <hr />

        <h4 class="mb-3 mt-4">Ürünler</h4>

        <table class="table table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Görsel</th>
                    <th>Ürün Adı</th>
                    <th>Liste Fiyatı</th>
                    <th>Satış Fiyatı</th>
                    <th>Adet</th>
                    <th>Tutar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Order_Items.OrderBy(p => p.Product.Name))
                {
                    <tr>
                        <td style="width:100px">
                            <img src="@Url.Action("Product" , "Images" , new { area="" , item.Product!.Id})" alt="" height="80" />

                        </td>
                        <td>@item.Product.Name</td>
                        <td>@item.Product.Price.ToString("n2") ₺</td>
                        <td>@item.Price.ToString("n2") ₺</td>
                        <td>@item.Quantity</td>
                        <td class="fw-bold">@item.Amount.ToString("n2") ₺</td>
                    </tr>
                }
            </tbody>
        </table>

        <hr />

        <div class="d-flex justify-content-end gap-2 mt-3">
            @switch (Model.Status)
            {
                case OrderStatus.New:
                    <a asp-action="ToInProgress" asp-route-id="@Model.Id" class="btn btn-primary">
                        Hazırlanıyor
                    </a>
                    break;

                case OrderStatus.InProgress:
                    <a asp-action="ToShipped" asp-route-id="@Model.Id" class="btn btn-info text-white">
                        Kargoya Verildi
                    </a>
                    break;

                case OrderStatus.Shipped:
                    <a asp-action="ToDelivered" asp-route-id="@Model.Id" class="btn btn-success">
                        Teslim Edildi
                    </a>
                    break;
            }
        </div>

    </div>
</div>
