@model IEnumerable<ShoppedOrder>
@{

}

<table class="table table-bordered table-stiped-colums">
    <colgroup>
        <col />
        <col />
        <col />
        <col />
        <col width="200" />
    </colgroup>
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Kullanıcı Adı</th>
            <th>Kullanıcı E-postası</th>
            <th>Tutar</th>
            <th>
                <div class="d-flex align-items-center ">
                    İşlemler
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>
                    @order.Date.ToShortDateString()
                </td>
                <td>
                    @order.User!.givenName
                </td>
                <td>
                    <a href="mailto:@order.User!.Email">@order.User!.Email</a>
                </td>
                <td class="text-right text-monospace ">@order.GrandTotal.ToString("n2")</td>
                <td class="d-flex align-items-center gap-2">
                    @if (order.Status == OrderStatus.InProgress)
                    {
                        <form asp-action="UpdateTracking" method="post" class="d-flex gap-2 track-form">
                            <input type="hidden" name="id" value="@order.Id" />

                            <input type="text"
                                   name="trackingNumber"
                                   value="@order.TrackingNumber"
                                   placeholder="Kargo No"
                                   class="form-control trackingInput"
                                   style="width:150px;" />

                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check"></i>
                            </button>
                        </form>
                    }
                    else
                    {
                 
                    <a asp-action="Detail"
                       asp-route-id="@order.Id"
                       class="btn btn-primary">
                        <i class="bi bi-search"></i> İncele
                    </a>
                    }

                </td>




            </tr>

        }



    </tbody>




</table>
@section Scripts{

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>

        $(() => {
            $('.remove-btn').on('click', (e) => {
                Swal.fire({
                    icon: 'warning',
                    title: 'uyarı',
                    html: 'Bu kayıt tamamen silinecektir. Onaylıyor musunuz?',
                    showCancelButton: true,
                    cancelButtonText: 'İptal',
                    confirmButtonText: 'Sil',
                })
                    .then((result) => {
                        if (result.isConfirmed)
                            window.location = $(e.currentTarget).attr('href');
                    });
                return false;
            });
            $('.track-form').on('submit', function () {
                let input = $(this).find('.trackingInput').val().trim();

                if (input === "") {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Hata',
                        text: 'Kargo takip numarası boş olamaz!'
                    });
                    return false;
                }
            });
        });
    </script>
}