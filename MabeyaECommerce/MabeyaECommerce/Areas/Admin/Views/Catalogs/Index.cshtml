@model List<Catalog>
@{
    ViewData["Title"] = "Katalog Listesi ";
}
<div class=" p-3 d-flex justify-content-end ">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus" aria-hidden="true"></i>
        Yeni Oluştur

    </a>
</div>
<table class="table table-bordered table-striped-columns">
    <thead>

        <tr>
            <th>
                <div class="  d-flex align-items-center ">

                    <img class="mr-4 "> Adı
                </div>
            </th>
            <th>
                <div class="  d-flex align-items-center ">

                    Aktiflik
                </div>
            </th>
            <th>
                <div class="  d-flex align-items-center ">

                    İşlemler
                </div>
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.Name </td>
                <td class="text-center">
                    @if (item.IsEnabled)
                    {
                        <i class="fa fa-check text-success" aria-hidden="true"> </i>
                    }
                    else
                    {
                        <i class="fa fa-times text-danger" aria-hidden="true"></i>
                    }
                </td>
                <td>
                    <div class="d-flex justify-content-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning me-2">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger remove-btn">
                            <i class="fa fa-trash" aria-hidden="true"> </i>

                        </a>
                    </div>
                </td>
            </tr>


        }
    </tbody>
</table>
@section Scripts{

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>

        $(() => {
            $('.remove-btn').on('click', (e) => {
                Swal.fire({
                    icon: 'warning',
                    title: 'uyarı',
                    html: 'Bu kayıt tamamen silinecektir. Onaylıyor musunuz?',
                    showCancelButton: true,
                    cancelButtonText: 'İptal',
                    confirmButtonText: 'Sil',
                })
                    .then((result) => {
                        if (result.isConfirmed)
                            window.location = $(e.currentTarget).attr('href');
                    });
                return false
            });
        });
    </script>
}

