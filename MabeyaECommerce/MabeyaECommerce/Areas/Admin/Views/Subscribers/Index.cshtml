@model List<MabeyaECommerce.Domain.Subscriber>

@{
    ViewData["Title"] = "E-posta Bülteni";
}

<h3 class="mb-4">Aboneler</h3>

@if (TempData["success"] != null)
{
    <div class="alert alert-success">@TempData["success"]</div>
}

@if (TempData["error"] != null)
{
    <div class="alert alert-danger">@TempData["error"]</div>
}

<div class="card p-4 mb-5 shadow-sm">
    <h5 class="mb-3">Toplu Mail Gönder</h5>

    <form method="post" asp-action="SendMail">

        <div class="mb-3">
            <label class="form-label">Konu (Subject)</label>
            <input type="text" name="subject" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Mesaj İçeriği</label>
            <textarea name="message" rows="5" class="form-control" required></textarea>
        </div>

        <button class="btn btn-primary">Toplu Mail Gönder</button>
    </form>
</div>


<div class="card p-4 shadow-sm">
    <h5 class="mb-3">Abone Listesi</h5>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>E-posta</th>
                <th>Tarih</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Email</td>
                    <td>@s.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
